{
  "name": "@jamesaphoenix/tx-core",
  "version": "0.4.2",
  "description": "Core business logic for tx - Effect-TS services and repositories",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./repo": {
      "types": "./dist/repo/index.d.ts",
      "import": "./dist/repo/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./mappers": {
      "types": "./dist/mappers/index.d.ts",
      "import": "./dist/mappers/index.js"
    },
    "./layer": {
      "types": "./dist/layer.d.ts",
      "import": "./dist/layer.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@jamesaphoenix/tx-types": "^0.4.1",
    "chokidar": "^5.0.0",
    "effect": "^3.19.15"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.52.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesaphoenix/tx.git",
    "directory": "packages/core"
  },
  "author": "James Phoenix",
  "license": "MIT"
}
