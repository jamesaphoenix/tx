{
  "name": "tx-monorepo",
  "version": "0.1.0",
  "description": "A lean task management system for AI agents and humans",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "bin": {
    "tx": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "migrations"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesaphoenix/tx.git"
  },
  "keywords": [
    "task-management",
    "ai-agents",
    "cli",
    "effect-ts",
    "mcp"
  ],
  "author": "James Phoenix",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "build:root": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "turbo test",
    "test:root": "vitest --run",
    "test:watch": "vitest",
    "lint": "turbo lint",
    "lint:root": "eslint src/ apps/",
    "lint:fix": "eslint src/ apps/ --fix",
    "typecheck": "turbo typecheck",
    "typecheck:root": "tsc --noEmit",
    "check": "./scripts/check.sh --all",
    "check:quick": "./scripts/check.sh --quick",
    "check:ci": "./scripts/check-ci.sh",
    "validate": "npm run build && npm test && npm link"
  },
  "dependencies": {
    "@effect/cli": "^0.73.1",
    "@effect/platform": "^0.94.2",
    "@effect/platform-node": "^0.104.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^11.7.0",
    "effect": "^3.19.15",
    "node-llama-cpp": "^3.15.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
